@model OdsSampleProject.Models.CityInfoViewModel
@{
    ViewData["Title"] = "GetCityInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Şehir Güncelleme</h1>
<form asp-action="GetCityInfo" method="post">
    <input type="hidden" asp-for="@Model.City.CityId" />


    <div class="form-group">
        <label for="editRegionName">Şehir Adı:</label>
        <input type="text" placeholder="Bölge Adını Giriniz." class="form control form-control-sm mr-2" asp-for="@Model.City.CityName" required />
    </div>
    <div class="form-group">
        <label for="editRegionId">Şehir Seçimi:</label>
        <select class="form-control form-control-sm mr-2" id="editRegionId" required asp-for="@Model.City.RegionId">
            @foreach (var region in Model.RegionList)
            {
                <option value="@region.RegionId">@region.RegionName</option>
            }
        </select>
    </div>

    <div class="mt-2">
        <button class="btn btn-info" type="submit">Bölge Güncelle</button>
    </div>
</form>

